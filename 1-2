a = 75
b = 112
c = int(input('Введите количество сувениров: '))
d = int(input('Введите количество безделушек: '))
m = a * c + b * d
print ('Общий веc посылки равен:',(m))


a = int(input('Введите целое четырехзначное число: '))
sum = 0
while (a!=0):
    sum = sum + a % 10
    a = a // 10
print ('Сумма цифр равна:',sum)
